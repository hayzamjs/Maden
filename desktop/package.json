{
  "name": "Maden",
  "version": "0.0.1",
  "description": "Uses computing power to mine monero which is donated to charities around the globe",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "icons": "nicns --in build/logo.png --out build/icon.icns;convert -resize 256x256 build/logo.png build/icon.ico",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "buildall": "electron-builder -mwl",
    "publish": "electron-builder -mwl -p always",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Maden",
  "license": "WTFPL",
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^19.22.1",
    "node-icns": "0.0.4"
  },
  "dependencies": {
    "battery-level": "^2.0.1",
    "electron-log": "^2.2.7",
    "electron-positioner": "^3.0.0",
    "electron-settings": "^3.1.1",
    "electron-updater": "2.16.1",
    "is-charging": "^1.2.0",
    "strip-ansi": "^4.0.0",
    "uuid": "^3.1.0"
  },
  "build": {
    "appId": "com.maden.miner",
    "productName": "Maden",
    "asar": false,
    "mac": {
      "category": "public.app-category.utilities",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 200,
          "y": 288
        },
        {
          "x": 400,
          "y": 283,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "maden.charity",
        "repo": "maden"
      }
    ]
  }
}
